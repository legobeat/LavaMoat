{
  "name": "lavamoat-monorepo",
  "private": true,
  "devDependencies": {
    "@metamask/eslint-config-nodejs": "^11.0.1",
    "ava": "^4.0.1",
    "depcheck": "^1.4.0",
    "eslint": "^8.40.0",
    "eslint-plugin-ava": "^13.2.0",
    "eslint-plugin-node": "^11.1.0",
    "lerna": "^6.6.2"
  },
  "engines": {
    "node": ">=14.0.0 <19.0.0"
  },
  "scripts": {
    "test": "lerna run --concurrency 1 test",
    "test:prep": "lerna run test:prep",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "build": "lerna run build",
    "publish": "lerna publish from-package --no-push --no-git-tag-version --yes",
    "setup": "lerna bootstrap -- --frozen-lockfile --check-files --production=false && yarn allow-scripts"
  },
  "workspaces": [
    "packages/*"
  ],
  "version": "0.0.0"
}
